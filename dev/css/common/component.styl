info()
  display:block
  background-color:white
  height:90px
  border-top:1px solid #cecece
  border-bottom:1px solid #cecece
  &:hover
    background-color:#efefef
  .left-border
    float:left
    width:6px
    height:100%
  .aside
    float:left
    width:90px
    padding:12px 8px
    img
      cycle(66px)
  .content
    padding-left:80px
    .title
      padding-top:10px
      line-height:40px
      font-size:18px
      color:dark_grey
    .date
      color:#cecece
      font-size:14px