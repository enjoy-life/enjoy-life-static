global-reset()

@import "common/*"

.banner-area
  background-color:#aaaaaa
  height:120px
  .banner
    float:left
    width:100%
    height:120px
    img
      width:100%
      height:100%


category_height=64px

.category-area
  padding:8px 1%
  background-color:rgba(255,255,255,0.95)
  border-top:1px solid #cecece
  border-bottom:1px solid #cecece
  clearfix()
  .category
    float:left
    height:category_height
    width:21.33%
    margin:2%
    text-align:center
    color:white
    font-size:14px
    .icon
      display:block
      center()
      margin-top:10px
      width:22px
      height:22px
    .title
      margin-top:9px
      font-size:12px

.hot-area
  margin-top:10px
  .head
    padding:10px 2% 0px 2%
    color:dark_grey
    font-size:16px
  .info
    info()
    margin:16px 0px




      
