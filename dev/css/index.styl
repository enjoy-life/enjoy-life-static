global-reset()

@import "common/*"

.banner-area
  background-color:#aaaaaa
  height:120px
  .banner
    float:left
    width:100%
    height:120px
    img
      width:100%
      height:100%


.category-area
  padding:8px 1%
  background-color:rgba(255,255,255,0.95)
  border-top:1px solid #cecece
  border-bottom:1px solid #cecece
  clearfix()
  .category
    float:left
    width:21.33%
    margin:2%
    .icon
      display:block
      center()
      cycle(64px)
      position:relative
      img
        position:absolute
        display:block
        top:50%
        left:50%
        margin-left:-11px
        margin-top:-11px
        width:22px
        height:22px
    .title
      text-align:center
      margin-top:9px
      font-size:12px
      color:grey

.hot-area
  margin-top:10px
  .head
    padding:10px 2% 0px 2%
    color:dark_grey
    font-size:14px
  .info
    info()
    margin:16px 0px




      
